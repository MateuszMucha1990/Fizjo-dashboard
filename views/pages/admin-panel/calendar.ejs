<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kalendarz</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/css/style-statistic.css">
    <link rel="stylesheet" href="/css/style-calendar.css">

</head>
<body>
    <%- include('../../partials/sidebar'); -%>
    
    
    <div class="main-content">
      <form action="" method="POST" enctype="multipart/form-data">
        <header>
            <div class="header-title-wrapper"> 
                <div class="top">

                    <label for="menu-toggle">
                        <span class="las la-calendar"></span>
                    </label>
                    <div class="header-title">
                        <h1>Kalendarz</h1>
                        <p>Zarządaj swoim czasem!</p>
                    </div>
                </div>

                <div class="container">
                    <div class="left">
                        <div class="calendar">
                            <div class="month">
                                <i class="las la-angle-left prev"></i>
                                <div class="date"> </div>
                                <i class="las la-angle-right next"></i>
                            </div>
                            <div class="weekdays">
                                <div>PON</div>
                                <div>WT</div>
                                <div>ŚR</div>
                                <div>CZW</div>
                                <div>PT</div>
                                <div>SB</div>
                                <div>ND</div>
                            </div>
                            <div class="days">
                   
                            </div>
                            <div class="goto-today">
                                <div class="goto">
                                    <input type="text" placeholder="mm/yyyy" class="date-input">
                                    <button class="goto-btn">Przejdz</button>
                                </div>
                                <button class="today-btn">Dzisiaj</button>
                            </div>
                        </div>
                    </div>

                    <div class="right">
                        <div class="today-date">
                            <div class="event-day"></div>
                            <div class="event-date"></div>
                        </div>
                        <div class="events">
                            <div class="event">
                                <div class="title">
                                    <i class="las la-circle"></i>
                                    <% allAppointments.forEach(app => { %>
                                                     <h3 class="event-title"><%- app.day %></h3>
                                                     <% } )%>
                                                 </div>
                                                 <div class="event-time">
                                                     <span class="event-time">jakasdata</span>
                                                 </div>
                                                </div> 
                        </div>
                        <div class="add-event-wrapper">
                            <div class="add-event-header">
                                <div class="title">Dodaj wizytę</div>
                                <i class="las la-times close"></i>
                            </div>

                        <form method="POST">
                            <div class="add-event-body">
                                <div class="add-event-input">
                                    <input type="text" placeholder="Imię pacjenta" class="event_name" name="event_name">
                                </div>
                                <div class="add-event-input">
                                    <input type="text" placeholder="Wizyta od:" class="event_time_from" name="event_time_from">
                                </div>
                                <div class="add-event-input">
                                    <input type="text" placeholder="Wizyta do:" class="event-time-to">
                                </div>
                            </div>
                            <div class="add-event-footer">
                                <button class="add-event-btn">Dodaj</button>
                            </div>
                        </form>

                        </div>
                    </div>
                    <button class="add-event">
                        <i class="las la-plus"></i>
                    </button>
                </div>



            </div>    
        </header>
      </form>
    </div>
</body>
<script src="/js/calendar.js"></script>
</html>